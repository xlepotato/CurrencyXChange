@{
    Layout = "/Views/Shared/Header.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <button type="button" id="btnSignUp" class="btn btn-block btn-default inactiveNow">Sign Up</button>
        </div>
        <div class="col-sm-4">
            <button type="button" id="btnLogIn" class="btn btn-block activeNow">Log In</button>
        </div>
    </div>
</div>

<div class="container">
    <form class="form-horizontal" action="/action_page.php">
        <div class="form-group">
            <label class="control-label col-sm-2" for="username">Username:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="username" name="username">
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="password">Password:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="password" name="password">
            </div>
        </div>
        <label id="lblLoginMessage"></label>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="button" class="btn btn-default" id="btnLogin">Login</button>
            </div>
        </div>
    </form>
</div>


