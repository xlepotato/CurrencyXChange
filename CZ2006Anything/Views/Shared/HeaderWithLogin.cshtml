<html>
<head>
    <link rel="stylesheet" href="/assets/css/bootstrap.min.css">
    <link href="~/Assets/Css/header.css" rel="stylesheet"/>
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/js/bootstrap.min.js"></script>
    <script src="/assets/js/script.js"></script>
</head>
<body>
    <div class="d-flex mb-3">
        <img class="mr-auto p-2" src="~/Assets/Images/logo.png" />
        @if (Session["Username"] == null)
        {
            <div class="p-2 bd-highlight">
                <button type="button" id="btnLogin" class="btn btn-light headerBtn ml-auto p-2 bd-highlight">Login</button>
                <button type="button" id="btnSignup" class="btn btn-warning headerBtn ml-auto p-2 bd-highlight">Sign Up</button>
            </div>
        }
        else
        {
            <label>@Session["Username"]</label>
        }
    </div>


    @RenderBody()
</body>
</html>


