
@{
    Layout = "/Views/Shared/HeaderLogoOnly.cshtml";
}


<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <button type="button" id="btnSignUp" class="btn btn-block activeNow">Sign Up</button>
        </div>
        <div class="col-sm-4">
            <button type="button" id="btnLogIn" class="btn btn-default btn-block inactiveNow">Log In</button>
        </div>
    </div>
</div>

<!--start register body-->
<div class="container">
    <form class="form-horizontal" action="/action_page.php">
        <div class="form-group">
            <label class="control-label col-sm-2" for="username">Username:</label>
            <div class="col-sm-8">
                <input type="text" class="form-control" id="username"
                       onkeyup="validateUsername()" name="username">
            </div>
            <label class=" col-sm-2" id="usernamePrompt"></label>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="password">Password:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="password" name="password">
                <label id="passwordPrompt"></label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="confirmpassword">Confirm Password:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" name="confirmpassword">
                <label id="confirmpasswordPrompt"></label>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="mobilenumber">Mobile Number:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="mobilenumber" name="mobilenumber">
                <label id="mobilenumberPrompt"></label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-default" id="btnRegister">Create Account</button>
            </div>
        </div>
    </form>
</div>

<label id="lblSuccess"></label>

